<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MovieZone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_grey</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_regular</item>

        <item name="android:windowSplashScreenBackground">@color/transparent_black</item>
        <!--        provide animatedly drawable-->
        <item name="android:windowSplashScreenAnimatedIcon">
            @mipmap/ic_launcher_round
        </item>
        <!--        max duration is 1000ms-->
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
        <!--splash screen branding image-->
        <item name="android:windowSplashScreenBrandingImage">@drawable/ic_flag_id</item>
        <!--        icon background color-->
        <item name="android:windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

    </style>
</resources>