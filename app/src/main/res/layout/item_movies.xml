<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    card_view:cardCornerRadius="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="8dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/image_description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:src="@tools:sample/avatars"
            android:id="@+id/iv_item_photo"/>

        <TextView
            android:id="@+id/tv_item_name"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dp_8"
            android:textAlignment="textStart"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_photo"
            tools:text="Belum ada Judul" />
        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="Tanggal release"
            android:layout_marginTop="@dimen/dp_8"
            android:textAlignment="textStart"
            android:layout_marginStart="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_name"
            app:layout_constraintStart_toEndOf="@+id/iv_item_photo"/>
        <TextView
            android:id="@+id/tv_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            tools:text="@string/server_maintain_message"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:maxLines="3"
            android:textAlignment="textStart"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_item_date"
            app:layout_constraintStart_toEndOf="@+id/iv_item_photo"/>
      <LinearLayout
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_item_photo"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/value_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progressTint="@color/color_primary"
                android:secondaryProgressTint="#00000000"
                android:isIndicator="false"
                android:stepSize="0.1"
                android:rating="4"
                android:numStars="5"
                android:layout_gravity="center_vertical"
                style="?android:attr/ratingBarStyleSmall"/>
            <TextView
                android:id="@+id/tx_rating"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Small"
                tools:text="8.0"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"/>
          <androidx.appcompat.widget.AppCompatImageView
              android:id="@+id/img_favorite"
              android:layout_width="@dimen/dp_40"
              android:contentDescription="@string/vote"
              android:layout_gravity="center_horizontal"
              android:src="@drawable/ic_favorite_border_white_24dp"
              android:tint="@color/color_accent"
              android:scaleType="centerInside"
              android:layout_height="@dimen/dp_40"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>